<div metal:use-macro="load: ../shared/_layout.pt">
    <div metal:fill-slot="content" tal:omit-tag="True">

    <section class="about-area">
        <div class="container">
            <div class="row align-items-lg-center">
                <div class="col-lg-6">
                    <div class="about-content">

            <h2>Episode  ${episode_info.episode_number} with ${episode_info.guest_firstname} ${episode_info.guest_lastname}</h2>
            <p>Released ${publish_date} (recorded ${record_date})</p>    
     
            <a href="https://circuitpythonshow.captivate.fm/listen" target="_blank" class="btn btn-primary btn-rounded btn-lg"><i class="fa fa fa-rss fa-fw"></i>
                            Subscribe</a>
                            <br /><br />
                            <p><b>Guest</b>: ${episode_info.guest_firstname} ${episode_info.guest_lastname}</p>
                            <p><b>Topics</b>: ${topic.topic} </p>
                            <p><b>Episode length</b>: ${episode_length}</p>
                            <p><b>Guest Bio</b>: ${episode_info.guest_bio_1}</p>

                            <div tal:condition="episode_info.guest_bio_2">
                                <p tal:condition="episode_info.guest_bio_2"><b>Guest Bio 2</b>: ${episode_info.guest_bio_2}</p>
                            </div>
                            
                            <div tal:condition="episode_info.youtube_url">
                                <p tal:condition="episode_info.youtube_url"> <a href="${episode_info.youtube_url}">Watch on YouTube</a>
                                (The YouTube stream is a behind the scenes recording of the episode and is only lightly edited
                                    compared to the podcast, which is recommended).</p>
                            </div>

                            
                      
                    </div>
                </div>
                <div class="col-lg-5 offset-lg-1">
                    <div class="about-img">
                        <div style="width: 100%; height: 600px; margin-bottom: 20px; border-radius: 6px; overflow: hidden;"><iframe style="width: 100%; height: 600px;" frameborder="no" scrolling="no" seamless src="https://player.captivate.fm/show/e28e83a7-99fb-4877-8147-e20456377e01"></iframe></div>
                    </div>
                </div>
            </div>
        </div>
    </section>

