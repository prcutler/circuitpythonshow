<div metal:use-macro="load: ../shared/_layout.pt">
    <div metal:fill-slot="content" tal:omit-tag="True">

    <div style="height 100%; width 100%;">
        <div class="container-fluid pt-3 d-flex align-items-center bg-dark pt-3 flex-column">
    <section class="about-area">
        <div class="container">
            <div class="row align-items-lg-center">
                <div class="col-lg-6">
                    <div class="about-content">
                        <h2>Episodes</h2>
                        <hr class="divider about-divider">
                        <p>There have been ${episode_count} episodes published so far.</p>
                        
                        <table class="table table-hover text-light" >
                        <p>
                            <tr>
                                <th>Episode</th>
                                <th>Guest</th>
                                <th>Date</th>
                                <th>Length</th>

                            </tr>
                            <span>
                            <tr tal:repeat = "e episodes">
                                <td><a href="${e.episode_number}">${e.episode_number}</a></td>
                                <td>${e.guest_firstname} ${e.guest_lastname}</td>
                                <td>${e.publish_date}</td>
                                <td>${e.episode_length}</td>
                            </tr>
                            </span>
                        </p>
                        </table>

                    </div>
                </div>
                <div class="col-lg-5 offset-lg-1">
                    <div class="about-img">
                        <img src="/static/img/cps-tagline-500.png" alt="Circuit Python Show Podcast">
                        <br /><br />
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>
        </div>
    </div>
</div>