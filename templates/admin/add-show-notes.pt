<div metal:use-macro="load: ../shared/_layout.pt">
    <div metal:fill-slot="content" tal:omit-tag="True">


    <div class="container-fluid bg-dark pt-3 d-flex align-items-center flex-column text-white">

        <div class="form-container">
            <form action="" method="POST" class="account-form" >
                <h1>Add Show Notes</h1>

            Season: <input name="season" type="text" placeholder="Season" class="form-control" value="${ season }" required>
            Episode: <input name="episode" type="text" placeholder="Episode" class="form-control" value="${ episode }" required>
            Published: <input name="published" type="text" placeholder="Published 1 or 0" class="form-control" value="${ published }" required>
            <br />
            Timestamp 1: <input name="timestamp_1" type="text" placeholder="Timestamp 1" class="form-control" value="${ timestamp_1 }" required>
            Notes 1: <input name="notes_1" type="text" placeholder="Notes 1" class="form-control" value="${ notes_1 }" required>
            Link 1: <input name="link_1" type="text" placeholder="Link 1" class="form-control" value="${ link_1 }" >
            Link 1 Text: <input name="link_text_1" type="text" placeholder="Link 1 Text" class="form-control" value="${ link_text_1 }" >
            <br />

            Timestamp 2: <input name="timestamp_2" type="text" placeholder="Timestamp 2" class="form-control" value="${ timestamp_2 }" >
            Notes 2: <input name="notes_2" type="text" placeholder="Notes 2" class="form-control" value="${ notes_2 }" >
            Link 2: <input name="link_2" type="text" placeholder="Link 2" class="form-control" value="${ link_2 }" >
            Link 2 Text: <input name="link_text_2" type="text" placeholder="Link 2 Text" class="form-control" value="${ link_text_2 }" >
            <br />
    
            Timestamp 3: <input name="timestamp_3" type="text" placeholder="Timestamp 3" class="form-control" value="${ timestamp_3 }" >
            Notes 3: <input name="notes_3" type="text" placeholder="Notes 3" class="form-control" value="${ notes_3 }" >
            Link 3: <input name="link_3" type="text" placeholder="Link 3" class="form-control" value="${ link_3 }" >
            Link 3 Text: <input name="link_text_3" type="text" placeholder="Link 3 Text" class="form-control" value="${ link_text_3 }" >
            <br />

            Timestamp 4: <input name="timestamp_4" type="text" placeholder="Timestamp 4" class="form-control" value="${ timestamp_4 }" >
            Notes 4: <input name="notes_4" type="text" placeholder="Notes 4" class="form-control" value="${ notes_4 }" >
            Link 4: <input name="link_4" type="text" placeholder="Link 4" class="form-control" value="${ link_4 }" >
            Link 4 Text: <input name="link_text_4" type="text" placeholder="Link 4 Text" class="form-control" value="${ link_text_4 }" >
            <br />

            Timestamp 5: <input name="timestamp_5" type="text" placeholder="Timestamp 5" class="form-control" value="${ timestamp_5 }" >
            Notes 5: <input name="notes_5" type="text" placeholder="Notes 5" class="form-control" value="${ notes_5 }" >
            Link 5: <input name="link_5" type="text" placeholder="Link 5" class="form-control" value="${ link_5 }" >
            Link 5 Text: <input name="link_text_5" type="text" placeholder="Link 5 Text" class="form-control" value="${ link_text_5 }" >
            <br />

            Timestamp 6: <input name="timestamp_6" type="text" placeholder="Timestamp " class="form-control" value="${ timestamp_6 }" >
            Notes 6: <input name="notes_6" type="text" placeholder="Notes 6" class="form-control" value="${ notes_6 }" >
            Link 6: <input name="link_6" type="text" placeholder="Link 6" class="form-control" value="${ link_6 }" >
            Link 6 Text: <input name="link_text_6" type="text" placeholder="Link 6 Text" class="form-control" value="${ link_text_6 }" >
            <br />


        

            <br />
            <button type="submit" class="btn btn-danger">Add Show Notes</button>
            <br />

            <br />
                <div style="clear: both;"></div>
                <br /><br /><br />

                <div class="error-msg" tal:condition="error">${ error }</div>
            </form>

        </div>
    </div>
    </div>

    <div metal:fill-slot="additional_css" tal:omit-tag="True">
        <link rel="stylesheet" href="/static/css/account.css">
    </div>
</div>